<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BookingFragment">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_rentalio_white" />

        <ImageView
            android:id="@+id/icSearch"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_search" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/relative1"
        android:background="@color/orange" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgBooking"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_honbrio" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/imgBooking"
                android:fontFamily="sans-serif-medium"
                android:text="HONDA BRIO"
                android:textColor="@color/orange"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textName"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/imgBooking"
                android:fontFamily="sans-serif-medium"
                android:text="4 SEAT"
                android:textColor="@color/dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textSeat"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/imgBooking"
                android:fontFamily="sans-serif-medium"
                android:text="2010 - 2015"
                android:textColor="@color/dark"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/color1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/textYear"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/imgBooking"
                android:background="@color/orange" />

            <ImageView
                android:id="@+id/color2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/textYear"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/color1"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/color3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/textYear"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/color2"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/color4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/textYear"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/color3"
                android:background="@color/maroon" />

            <TextView
                android:id="@+id/textDriverService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgBooking"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="DRIVER SERVICE" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDriverService"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativeWithDriver"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/light"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textWithDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="WITH DRIVER"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeWithotuDriver"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/orange">

                    <TextView
                        android:id="@+id/textWithoutDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="WITHOUT DRIVER"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textTransmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:text="TRANSMISSION" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTransmission"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/orange">

                    <TextView
                        android:id="@+id/textAT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_centerHorizontal="true"
                        android:text="AT"
                        android:textSize="25sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textKetAT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textAT"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_centerHorizontal="true"
                        android:text="Automatic Transmission"
                        android:textSize="12sp"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeMT"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@color/light"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/textMT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="MT"
                        android:textSize="25sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/texKetMT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textMT"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_centerHorizontal="true"
                        android:text="Manual Transmission"
                        android:textSize="12sp"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_centerHorizontal="true"
                        android:text="FROM"
                        android:textSize="12sp"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/timeFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textFrom"
                        android:fontFamily="@font/roboto"
                        android:layout_centerHorizontal="true"
                        android:text="Sat, Feb 29, 2018 - 17:00 PM"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:background="@drawable/backgr_orange"
                        android:padding="5dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_centerHorizontal="true"
                        android:text="To"
                        android:textSize="12sp"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/timeTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textTo"
                        android:fontFamily="@font/roboto"
                        android:layout_centerHorizontal="true"
                        android:text="Sun,Mar 1,2018 - 09:00 AM"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:background="@drawable/backgr_orange"
                        android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:drawableStart="@drawable/ic_location"
                android:text="Ngurah Rai International Airport"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/backgr_orange"
                android:padding="5dp"/>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textLocation"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/icPuchase"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_purchase"/>

                <TextView
                    android:id="@+id/textPriceEstimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icPuchase"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="PRICE ESTIMATE"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Rp. 350.000/24 HOUR"
                    android:textSize="12sp"
                    android:textColor="@color/orange"/>

                <TextView
                    android:id="@+id/textDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textPrice"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="X7 DAYS"
                    android:textSize="12sp"
                    android:textColor="@color/orange"/>

                <RelativeLayout
                    android:id="@+id/relative4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/textDays"
                    android:layout_toRightOf="@id/icPuchase"/>

                <TextView
                    android:id="@+id/textTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icPuchase"
                    android:layout_below="@id/relative4"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="TOTAL"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/totalHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/relative4"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rp. 2.1000.000"
                    android:textSize="16sp"
                    android:textColor="@color/orange"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/totalHarga"
                    android:layout_toRightOf="@id/icPuchase"/>
            </RelativeLayout>

            <CheckBox
                android:id="@+id/chkTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/relative3"
                android:text="I AGREE TO ALL TERMS AND CONDITIONS APPLIED"
                android:textSize="10sp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/chkTerms"
                android:text="BOOK NOW"
                android:layout_margin="20dp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>